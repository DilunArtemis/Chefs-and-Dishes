@model Chef

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chefs and Dishes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container bg-light">

        <div class="row">
            <h1 class="col-sm-12 text-center bg-info text-light">Add a Chef!</h1>
        </div>

        <p><a href = "allchefs"> Home </a></p> 

        <div class="row">
            <form class="col-sm-8 offset-sm-2" asp-action="addchef" asp-controller="Home" method="post">
                <div class="form-group row">
                    <span class="col-sm-12 text-danger" asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName" class="col-sm-4"></label>
                    <input asp-for="FirstName" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <span class="col-sm-12 text-danger" asp-validation-for="LastName"></span>
                    <label asp-for="LastName" class="col-sm-4"></label>
                    <input asp-for="LastName" class="col-sm-8 form-control">
                </div>
                <div class="form-group row">
                    <span class="col-sm-12 text-danger" asp-validation-for="DateOfBirth"></span>
                    <label asp-for="DateOfBirth" class="col-sm-4"></label>
                    <input asp-for="DateOfBirth" class="col-sm-8 form-control">
                </div>
                <div class = "form-group-row">
                    <input type = "submit" value = "Add Chef" class = "col-sm-4 btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>